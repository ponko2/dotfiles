{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "addLabels": ["github_actions"]
    }
  ],
  "rangeStrategy": "bump",
  "schedule": ["* 0-4 * * *"],
  "timezone": "Asia/Tokyo"
}
